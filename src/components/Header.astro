---
const pathname = Astro.url.pathname;
---

<header class="site-header">
  <div class="site-title">
    <a href="/">The Human Element</a>
  </div>
  <nav class="site-nav" aria-label="Main">
    <a href="/archive" aria-current={pathname.startsWith('/archive') ? 'page' : undefined}>Archive</a>
    <a href="/about" aria-current={pathname === '/about/' || pathname === '/about' ? 'page' : undefined}>About</a>
    <a href="/subscribe" aria-current={pathname === '/subscribe/' || pathname === '/subscribe' ? 'page' : undefined}>Subscribe</a>
  </nav>
</header>
